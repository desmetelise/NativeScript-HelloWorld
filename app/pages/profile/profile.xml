<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="onLoaded" navigatedTo="onNavigatedTo" actionBarHidden="true">
	<StackLayout>
		<Label text="Profile" textWrap="true" class="title" />

        <GridLayout rows="*, *, *, *, *" columns="*, *" class="content">

            <StackLayout row="0" col="0" >
                <Label text="Name: " textWrap="true" class="left-grid"/>
            </StackLayout>

            <StackLayout row="0" col="1" >
                <Label text="{{ name }}" textWrap="true" class="right-grid"/>
            </StackLayout>

            <StackLayout row="1" col="0" >
                <Label text="Nickname: " textWrap="true" class="left-grid"/>
            </StackLayout>

            <StackLayout row="1" col="1" >
                <Label text="{{ nickname }}" textWrap="true" class="right-grid"/>
            </StackLayout>

            <StackLayout row="2" col="0">
                <Label text="#Repos:" textWrap="true" class="left-grid"/>
            </StackLayout>

            <StackLayout row="2" col="1" >
                <Label text="{{ repos }}" textWrap="true" class="right-grid"/>
            </StackLayout>

            <StackLayout row="3" col="0">
                <Label text="#Followers: " textWrap="true" class="left-grid"/>
            </StackLayout>

            <StackLayout row="3" col="1" >
                <Label text="{{ followers }}" textWrap="true" class="right-grid"/>
            </StackLayout>

            <StackLayout row="4" colSpan="2">
                <Label text="Avatar" textWrap="true" />
                <Image src="{{ avatar }}" stretch="aspectFit" />
                
            </StackLayout>
            
        </GridLayout>

	</StackLayout>
</Page>;
